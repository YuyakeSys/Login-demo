<%= form_with(model: project, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control', required: true %>
  </div>

  <div class="form-floating">
    <%= form.label :label, 'Select Label' %>
    <br/>
    <%= form.select :label, ['Biology', 'Software', 'Sustainable'], { selected: project.labels }, { class: 'form-select', id: 'floatingSelect', required: true } %>
  </div>


<br />
  <%= form.submit 'Create Project', class: 'btn btn-primary' %>
<% end %>
<br />
