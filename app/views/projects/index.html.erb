<div class="container mt-4">
  <h1>Projects</h1>

  <%= link_to 'New Project', new_project_path, class: 'btn btn-primary mb-3' %>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Labels</th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td><%= project.description %></td>
          <td><%= project.labels %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>